    goto_if_set FLAG_BADGE02_GET, DewfordTown_Gym_EventScript_GymStatueCertified
    goto DewfordTown_Gym_EventScript_GymStatue
    end

DewfordTown_Gym_EventScript_GymStatueCertified::
