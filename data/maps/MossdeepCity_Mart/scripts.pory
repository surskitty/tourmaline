mapscripts MossdeepCity_Mart_MapScripts {}

script MossdeepCity_Mart_EventScript_Clerk {
    lock
    faceplayer
    message(gText_HowMayIServeYou)
    waitmessage
    pokemart(MossdeepCity_Mart_Pokemart)
    msgbox(gText_PleaseComeAgain, MSGBOX_DEFAULT)
    release
}

mart MossdeepCity_Mart_Pokemart { 
    ITEM_ULTRA_BALL
    ITEM_NET_BALL
    ITEM_DIVE_BALL
    ITEM_LURE_BALL
    ITEM_HYPER_POTION
    ITEM_FULL_HEAL
    ITEM_REVIVE
    ITEM_MAX_LURE
    ITEM_MAX_REPEL
    ITEM_X_ATTACK
    ITEM_X_DEFENSE
    ITEM_ALAKAZITE
    ITEM_GALLADITE
    ITEM_GARDEVOIRITE
    ITEM_GLALITITE
}

