Route104_EventScript_MayDefeated::
    msgbox Route104_Text_MayPostBattle, MSGBOX_DEFAULT
    call_if_eq VAR_0x8008, 0, Route104_EventScript_RestoreMusic
    releaseall
    end

Route104_EventScript_RestoreMusic::
