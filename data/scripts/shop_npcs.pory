    dynmultipush("Swampert",    ITEM_SWAMPERTITE)
    dynmultipush("Audino",      ITEM_AUDINITE)
    dynmultipush("Drednaw",     ITEM_DREDNITE)
    dynmultipush("Gardevoir",   ITEM_GARDEVOIRITE)
