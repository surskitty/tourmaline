script Common_EventScript_MegaStoneClerk_BuyMegaStone {
    dynmultistack(13, 1, FALSE, 5, FALSE, FALSE, DYN_MULTICHOICE_CB_SHOW_ITEM)
    if (var(VAR_RESULT) != MULTI_B_PRESSED)
    {
        hidemoneybox
        giveitem(VAR_RESULT)
        removemoney(MEGA_STONE_PRICE)
    }
    hidemoneybox
    msgbox(gText_PleaseComeAgain, MSGBOX_DEFAULT)
    release
}

script Common_EventScript_ItemClerk {
    lock
    faceplayer
    speakername(CommonName_Text_Clerk)
    if (flag(FLAG_BADGE07_GET)) { goto(Common_EventScript_Clerk_Endgame) }
    message(gText_HowMayIServeYou)
    waitmessage
    if (flag(FLAG_VISITED_MOSSDEEP_CITY)) { pokemart(Common_Marts_PostLilycove) } 
    elif (flag(FLAG_BADGE05_GET)) { pokemart(Common_Marts_PostNorman) }
    elif (flag(FLAG_BADGE03_GET)) { pokemart(Common_Marts_PostWattson) }
    elif (flag(FLAG_BADGE02_GET)) { pokemart(Common_Marts_PostBrawly) } 
    elif (flag(FLAG_BADGE01_GET)) { pokemart(Common_Marts_PostRoxanne) } 
    else { pokemart(Common_Marts_NoBadges) }
    speakername(CommonName_Text_Clerk)
    msgbox(gText_PleaseComeAgain, MSGBOX_DEFAULT)
    release
}

